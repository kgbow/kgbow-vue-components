{
  "name": "@kgbow/components",
  "version": "0.1.0",
  "description": "Vue 3 组件库 - 包含动态歌词显示等创意组件",
  "author": "kgbow",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kgbow/kgbow-vue-components"
  },
  "homepage": "https://github.com/kgbow/kgbow-vue-components",
  "bugs": {
    "url": "https://github.com/kgbow/kgbow-vue-components/issues"
  },
  "keywords": [
    "vue",
    "vue3",
    "components",
    "lyrics",
    "music",
    "animation",
    "line-lyric",
    "歌词",
    "动画"
  ],
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs",
      "types": "./dist/index.d.ts"
    },
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "build": "vite build && vue-tsc --declaration --emitDeclarationOnly --outDir dist",
    "dev": "vite build --watch"
  },
  "peerDependencies": {
    "vue": "^3.4.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "vite": "^5.0.0",
    "vue-tsc": "^1.8.0"
  }
}